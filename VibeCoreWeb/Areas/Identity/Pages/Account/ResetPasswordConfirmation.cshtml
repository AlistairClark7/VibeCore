@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<section class="max-w-xl rounded-3xl border border-slate-200/70 dark:border-slate-800/60 bg-white/80 dark:bg-slate-950/40 p-8">
    <h1 class="text-2xl font-semibold text-slate-900 dark:text-white">@ViewData["Title"]</h1>
    <p class="mt-3 text-sm text-slate-600 dark:text-slate-300">
        Your password has been reset. Please <a class="text-sky-600 dark:text-sky-300 transition hover:text-sky-700 dark:hover:text-sky-200" asp-page="./Login">click here to log in</a>.
    </p>
</section>




