@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout !=  null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<section class="space-y-6">
    <div>
        <h1 class="text-2xl font-semibold text-slate-900 dark:text-white">Manage your account</h1>
        <p class="mt-2 text-sm text-slate-500 dark:text-slate-400">Change your account settings.</p>
    </div>
    <div class="grid gap-6 lg:grid-cols-[220px_1fr]">
        <aside class="rounded-2xl border border-slate-200/70 dark:border-slate-800/60 bg-white/80 dark:bg-slate-950/40 p-4">
            <partial name="_ManageNav" />
        </aside>
        <div class="rounded-3xl border border-slate-200/70 dark:border-slate-800/60 bg-white/80 dark:bg-slate-950/40 p-6">
            @RenderBody()
        </div>
    </div>
</section>

@section Scripts {
    @RenderSection("Scripts", required: false)
}




