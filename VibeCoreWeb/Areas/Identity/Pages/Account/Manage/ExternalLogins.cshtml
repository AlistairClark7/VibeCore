@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = "Manage your external logins";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<partial name="_StatusMessage" for="StatusMessage" />
@if (Model.CurrentLogins?.Count > 0)
{
    <h3 class="mt-4 text-lg font-semibold text-slate-900 dark:text-white">Registered Logins</h3>
    <div class="mt-4 space-y-3">
        @foreach (var login in Model.CurrentLogins)
        {
            <div class="flex flex-wrap items-center justify-between gap-3 rounded-2xl border border-slate-200/70 dark:border-slate-800/60 bg-white/80 dark:bg-slate-950/40 px-4 py-3">
                <span id="@($"login-provider-{login.LoginProvider}")" class="text-sm text-slate-700 dark:text-slate-200">@login.ProviderDisplayName</span>
                @if (Model.ShowRemoveButton)
                {
                    <form id="@($"remove-login-{login.LoginProvider}")" asp-page-handler="RemoveLogin" method="post">
                        <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                        <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                        <button type="submit" class="rounded-full border border-rose-500/40 px-4 py-2 text-xs font-semibold text-rose-700 dark:text-rose-200 transition hover:border-rose-400/60 hover:text-rose-800 dark:hover:text-rose-100" title="Remove this @login.ProviderDisplayName login from your account">Remove</button>
                    </form>
                }
            </div>
        }
    </div>
}
@if (Model.OtherLogins?.Count > 0)
{
    <h4 class="mt-6 text-base font-semibold text-slate-900 dark:text-white">Add another service to log in</h4>
    <form id="link-login-form" asp-page-handler="LinkLogin" method="post" class="mt-4 flex flex-wrap gap-3">
        @foreach (var provider in Model.OtherLogins)
        {
            <button id="@($"link-login-button-{provider.Name}")" type="submit" class="rounded-full border border-slate-300/70 dark:border-slate-700/60 px-4 py-2 text-xs font-semibold text-slate-700 dark:text-slate-200 transition hover:border-slate-400/60 hover:text-slate-900 dark:hover:text-white" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                @provider.DisplayName
            </button>
        }
    </form>
}




