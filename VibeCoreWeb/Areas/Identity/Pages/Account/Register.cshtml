@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="grid gap-8 lg:grid-cols-2">
    <div class="rounded-3xl border border-slate-200/70 dark:border-slate-800/60 bg-white/80 dark:bg-slate-950/40 p-8 shadow-[0_20px_60px_rgba(15,23,42,0.35)]">
        <h1 class="text-2xl font-semibold text-slate-900 dark:text-white">@ViewData["Title"]</h1>
        <p class="mt-2 text-sm text-slate-500 dark:text-slate-400">Create a new account.</p>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-6 space-y-5">
            <div asp-validation-summary="ModelOnly" class="rounded-2xl border border-rose-500/30 bg-rose-500/10 p-3 text-sm text-rose-700 dark:text-rose-200" role="alert"></div>
            <div>
                <label asp-for="Input.Email" class="text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400">Email</label>
                <input asp-for="Input.Email" class="mt-2 w-full rounded-xl border border-slate-300 dark:border-slate-800 bg-white/95 dark:bg-slate-950/60 px-4 py-3 text-sm text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:border-sky-400 focus:outline-none focus:ring-2 focus:ring-sky-500/20" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="mt-2 block text-sm text-rose-600 dark:text-rose-300"></span>
            </div>
            <div>
                <label asp-for="Input.Password" class="text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400">Password</label>
                <input asp-for="Input.Password" class="mt-2 w-full rounded-xl border border-slate-300 dark:border-slate-800 bg-white/95 dark:bg-slate-950/60 px-4 py-3 text-sm text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:border-sky-400 focus:outline-none focus:ring-2 focus:ring-sky-500/20" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="mt-2 block text-sm text-rose-600 dark:text-rose-300"></span>
            </div>
            <div>
                <label asp-for="Input.ConfirmPassword" class="text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400">Confirm password</label>
                <input asp-for="Input.ConfirmPassword" class="mt-2 w-full rounded-xl border border-slate-300 dark:border-slate-800 bg-white/95 dark:bg-slate-950/60 px-4 py-3 text-sm text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:border-sky-400 focus:outline-none focus:ring-2 focus:ring-sky-500/20" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="mt-2 block text-sm text-rose-600 dark:text-rose-300"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-full rounded-full bg-sky-500 px-5 py-3 text-sm font-semibold text-slate-950 transition hover:bg-sky-400">Register</button>
        </form>
    </div>
    <div class="rounded-3xl border border-slate-200/70 dark:border-slate-800/60 bg-white/80 dark:bg-slate-950/40 p-8">
        <h2 class="text-lg font-semibold text-slate-900 dark:text-white">Use another service to register</h2>
        <div class="mt-4 text-sm text-slate-600 dark:text-slate-300">
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p>
                        There are no external authentication services configured. See this
                        <a class="text-sky-600 dark:text-sky-300 transition hover:text-sky-700 dark:hover:text-sky-200" href="https://go.microsoft.com/fwlink/?LinkID=532715">article about setting up this ASP.NET application to support logging in via external services</a>.
                    </p>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-4 flex flex-wrap gap-3">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="rounded-full border border-slate-300/70 dark:border-slate-700/60 px-4 py-2 text-sm font-semibold text-slate-700 dark:text-slate-200 transition hover:border-slate-400/60 hover:text-slate-900 dark:hover:text-white" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                @provider.DisplayName
                            </button>
                        }
                    </form>
                }
            }
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




