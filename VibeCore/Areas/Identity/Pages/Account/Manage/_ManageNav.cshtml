@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="space-y-1 text-sm">
    <li>
        <a class="flex items-center justify-between rounded-xl px-3 py-2 transition @((ManageNavPages.IndexNavClass(ViewContext) == "active") ? "bg-slate-200/80 dark:bg-slate-800/80 text-slate-900 dark:text-white" : "text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-900/60 hover:text-slate-900 dark:hover:text-white")" id="profile" asp-page="./Index">
            Profile
        </a>
    </li>
    <li>
        <a class="flex items-center justify-between rounded-xl px-3 py-2 transition @((ManageNavPages.EmailNavClass(ViewContext) == "active") ? "bg-slate-200/80 dark:bg-slate-800/80 text-slate-900 dark:text-white" : "text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-900/60 hover:text-slate-900 dark:hover:text-white")" id="email" asp-page="./Email">
            Email
        </a>
    </li>
    <li>
        <a class="flex items-center justify-between rounded-xl px-3 py-2 transition @((ManageNavPages.ChangePasswordNavClass(ViewContext) == "active") ? "bg-slate-200/80 dark:bg-slate-800/80 text-slate-900 dark:text-white" : "text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-900/60 hover:text-slate-900 dark:hover:text-white")" id="change-password" asp-page="./ChangePassword">
            Password
        </a>
    </li>
    @if (hasExternalLogins)
    {
        <li id="external-logins">
            <a id="external-login" class="flex items-center justify-between rounded-xl px-3 py-2 transition @((ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active") ? "bg-slate-200/80 dark:bg-slate-800/80 text-slate-900 dark:text-white" : "text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-900/60 hover:text-slate-900 dark:hover:text-white")" asp-page="./ExternalLogins">
                External logins
            </a>
        </li>
    }
    <li>
        <a class="flex items-center justify-between rounded-xl px-3 py-2 transition @((ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active") ? "bg-slate-200/80 dark:bg-slate-800/80 text-slate-900 dark:text-white" : "text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-900/60 hover:text-slate-900 dark:hover:text-white")" id="two-factor" asp-page="./TwoFactorAuthentication">
            Two-factor authentication
        </a>
    </li>
    <li>
        <a class="flex items-center justify-between rounded-xl px-3 py-2 transition @((ManageNavPages.PersonalDataNavClass(ViewContext) == "active") ? "bg-slate-200/80 dark:bg-slate-800/80 text-slate-900 dark:text-white" : "text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-900/60 hover:text-slate-900 dark:hover:text-white")" id="personal-data" asp-page="./PersonalData">
            Personal data
        </a>
    </li>
</ul>




