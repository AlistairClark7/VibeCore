@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="flex items-center gap-4 text-xs uppercase tracking-[0.2em] text-slate-600 dark:text-slate-400">
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <a class="transition hover:text-slate-900 dark:hover:text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button type="submit" class="rounded-full border border-slate-300/60 dark:border-slate-700/60 px-4 py-2 text-xs font-semibold text-slate-700 dark:text-slate-200 transition hover:border-slate-400/60 dark:hover:border-slate-400/60 hover:text-slate-900 dark:hover:text-white">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li>
            <a class="transition hover:text-slate-900 dark:hover:text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a class="transition hover:text-slate-900 dark:hover:text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>