@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="rounded-3xl border border-slate-800/60 bg-gradient-to-br from-slate-900 via-slate-950 to-slate-900 p-10 shadow-[0_0_40px_rgba(56,189,248,0.15)]">
    <p class="text-xs uppercase tracking-[0.25em] text-sky-300/80">Vibe coding starter</p>
    <h1 class="mt-4 text-3xl font-semibold text-white sm:text-4xl">Welcome to the shared Tailwind shell</h1>
    <p class="mt-4 max-w-2xl text-slate-300">
        Razor Pages and React now speak the same design language. Customize utility classes once and reuse them everywhere.
    </p>
    <div class="mt-8 grid gap-4 sm:grid-cols-2">
        <div class="rounded-2xl border border-slate-800/60 bg-slate-900/50 p-5">
            <p class="text-sm font-semibold text-slate-100">Razor-ready</p>
            <p class="mt-2 text-sm text-slate-400">Build server-rendered pages with Tailwind utilities.</p>
        </div>
        <div class="rounded-2xl border border-slate-800/60 bg-slate-900/50 p-5">
            <p class="text-sm font-semibold text-slate-100">React-ready</p>
            <p class="mt-2 text-sm text-slate-400">Share the same tokens inside the Vite app.</p>
        </div>
    </div>
</section>