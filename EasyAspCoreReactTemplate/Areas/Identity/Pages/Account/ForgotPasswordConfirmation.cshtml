@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<section class="max-w-xl rounded-3xl border border-slate-800/60 bg-slate-950/40 p-8">
    <h1 class="text-2xl font-semibold text-white">@ViewData["Title"]</h1>
    <p class="mt-3 text-sm text-slate-300">Please check your email to reset your password.</p>
</section>
