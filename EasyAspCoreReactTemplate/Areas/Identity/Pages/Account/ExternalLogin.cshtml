@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<section class="max-w-xl rounded-3xl border border-slate-200/70 dark:border-slate-800/60 bg-white/80 dark:bg-slate-950/40 p-8">
    <h1 class="text-2xl font-semibold text-slate-900 dark:text-white">@ViewData["Title"]</h1>
    <p id="external-login-title" class="mt-2 text-sm text-slate-500 dark:text-slate-400">Associate your @Model.ProviderDisplayName account.</p>
    <p id="external-login-description" class="mt-4 text-sm text-slate-600 dark:text-slate-300">
        You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
        Please enter an email address for this site below and click the Register button to finish
        logging in.
    </p>
    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-6 space-y-5">
        <div asp-validation-summary="ModelOnly" class="rounded-2xl border border-rose-500/30 bg-rose-500/10 p-3 text-sm text-rose-700 dark:text-rose-200" role="alert"></div>
        <div>
            <label asp-for="Input.Email" class="text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400">Email</label>
            <input asp-for="Input.Email" class="mt-2 w-full rounded-xl border border-slate-300 dark:border-slate-800 bg-white/95 dark:bg-slate-950/60 px-4 py-3 text-sm text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:border-sky-400 focus:outline-none focus:ring-2 focus:ring-sky-500/20" autocomplete="email" placeholder="Please enter your email." />
            <span asp-validation-for="Input.Email" class="mt-2 block text-sm text-rose-600 dark:text-rose-300"></span>
        </div>
        <button type="submit" class="w-full rounded-full bg-sky-500 px-5 py-3 text-sm font-semibold text-slate-950 transition hover:bg-sky-400">Register</button>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




