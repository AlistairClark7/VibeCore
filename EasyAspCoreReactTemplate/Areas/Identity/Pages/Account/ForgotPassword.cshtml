@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section class="max-w-xl rounded-3xl border border-slate-800/60 bg-slate-950/40 p-8">
    <h1 class="text-2xl font-semibold text-white">@ViewData["Title"]</h1>
    <p class="mt-2 text-sm text-slate-400">Enter your email to reset your password.</p>
    <form method="post" class="mt-6 space-y-5">
        <div asp-validation-summary="ModelOnly" class="rounded-2xl border border-rose-500/30 bg-rose-500/10 p-3 text-sm text-rose-200" role="alert"></div>
        <div>
            <label asp-for="Input.Email" class="text-xs font-semibold uppercase tracking-wider text-slate-400">Email</label>
            <input asp-for="Input.Email" class="mt-2 w-full rounded-xl border border-slate-800 bg-slate-950/60 px-4 py-3 text-sm text-slate-100 placeholder:text-slate-500 focus:border-sky-400 focus:outline-none focus:ring-2 focus:ring-sky-500/20" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="mt-2 block text-sm text-rose-300"></span>
        </div>
        <button type="submit" class="w-full rounded-full bg-sky-500 px-5 py-3 text-sm font-semibold text-slate-950 transition hover:bg-sky-400">Reset Password</button>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
