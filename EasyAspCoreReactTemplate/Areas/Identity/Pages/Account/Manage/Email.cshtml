@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3 class="text-lg font-semibold text-slate-900 dark:text-white">@ViewData["Title"]</h3>
<div class="mt-4">
    <partial name="_StatusMessage" for="StatusMessage" />
</div>
<form id="email-form" method="post" class="mt-6 max-w-xl space-y-5">
    <div asp-validation-summary="All" class="rounded-2xl border border-rose-500/30 bg-rose-500/10 p-3 text-sm text-rose-700 dark:text-rose-200" role="alert"></div>
    <div>
        <label asp-for="Email" class="text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400">Current email</label>
        <div class="mt-2 flex items-center gap-3">
            <input asp-for="Email" class="w-full rounded-xl border border-slate-300 dark:border-slate-800 bg-white/95 dark:bg-slate-950/60 px-4 py-3 text-sm text-slate-500" placeholder="Please enter your email." disabled />
            @if (Model.IsEmailConfirmed)
            {
                <span class="rounded-full border border-emerald-500/30 bg-emerald-500/10 px-3 py-1 text-xs font-semibold text-emerald-700 dark:text-emerald-200">Verified</span>
            }
        </div>
        @if (!Model.IsEmailConfirmed)
        {
            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="mt-3 rounded-full border border-slate-300/70 dark:border-slate-700/60 px-4 py-2 text-xs font-semibold text-slate-700 dark:text-slate-200 transition hover:border-slate-400/60 hover:text-slate-900 dark:hover:text-white">
                Send verification email
            </button>
        }
    </div>
    <div>
        <label asp-for="Input.NewEmail" class="text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400">New email</label>
        <input asp-for="Input.NewEmail" class="mt-2 w-full rounded-xl border border-slate-300 dark:border-slate-800 bg-white/95 dark:bg-slate-950/60 px-4 py-3 text-sm text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:border-sky-400 focus:outline-none focus:ring-2 focus:ring-sky-500/20" autocomplete="email" aria-required="true" placeholder="Please enter new email." />
        <span asp-validation-for="Input.NewEmail" class="mt-2 block text-sm text-rose-600 dark:text-rose-300"></span>
    </div>
    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-full rounded-full bg-sky-500 px-5 py-3 text-sm font-semibold text-slate-950 transition hover:bg-sky-400">Change email</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




