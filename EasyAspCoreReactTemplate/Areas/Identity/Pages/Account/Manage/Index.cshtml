@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-lg font-semibold text-white">@ViewData["Title"]</h3>
<div class="mt-4">
    <partial name="_StatusMessage" for="StatusMessage" />
</div>
<form id="profile-form" method="post" class="mt-6 max-w-xl space-y-5">
    <div asp-validation-summary="ModelOnly" class="rounded-2xl border border-rose-500/30 bg-rose-500/10 p-3 text-sm text-rose-200" role="alert"></div>
    <div>
        <label asp-for="Username" class="text-xs font-semibold uppercase tracking-wider text-slate-400">Username</label>
        <input asp-for="Username" class="mt-2 w-full rounded-xl border border-slate-800 bg-slate-950/60 px-4 py-3 text-sm text-slate-500" placeholder="Please choose your username." disabled />
    </div>
    <div>
        <label asp-for="Input.PhoneNumber" class="text-xs font-semibold uppercase tracking-wider text-slate-400">Phone number</label>
        <input asp-for="Input.PhoneNumber" class="mt-2 w-full rounded-xl border border-slate-800 bg-slate-950/60 px-4 py-3 text-sm text-slate-100 placeholder:text-slate-500 focus:border-sky-400 focus:outline-none focus:ring-2 focus:ring-sky-500/20" placeholder="Please enter your phone number." />
        <span asp-validation-for="Input.PhoneNumber" class="mt-2 block text-sm text-rose-300"></span>
    </div>
    <button id="update-profile-button" type="submit" class="w-full rounded-full bg-sky-500 px-5 py-3 text-sm font-semibold text-slate-950 transition hover:bg-sky-400">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
