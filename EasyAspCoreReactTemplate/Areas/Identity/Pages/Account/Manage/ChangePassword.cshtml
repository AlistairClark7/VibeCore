@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-lg font-semibold text-slate-900 dark:text-white">@ViewData["Title"]</h3>
<div class="mt-4">
    <partial name="_StatusMessage" for="StatusMessage" />
</div>
<form id="change-password-form" method="post" class="mt-6 max-w-xl space-y-5">
    <div asp-validation-summary="ModelOnly" class="rounded-2xl border border-rose-500/30 bg-rose-500/10 p-3 text-sm text-rose-700 dark:text-rose-200" role="alert"></div>
    <div>
        <label asp-for="Input.OldPassword" class="text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400">Current password</label>
        <input asp-for="Input.OldPassword" class="mt-2 w-full rounded-xl border border-slate-300 dark:border-slate-800 bg-white/95 dark:bg-slate-950/60 px-4 py-3 text-sm text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:border-sky-400 focus:outline-none focus:ring-2 focus:ring-sky-500/20" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
        <span asp-validation-for="Input.OldPassword" class="mt-2 block text-sm text-rose-600 dark:text-rose-300"></span>
    </div>
    <div>
        <label asp-for="Input.NewPassword" class="text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400">New password</label>
        <input asp-for="Input.NewPassword" class="mt-2 w-full rounded-xl border border-slate-300 dark:border-slate-800 bg-white/95 dark:bg-slate-950/60 px-4 py-3 text-sm text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:border-sky-400 focus:outline-none focus:ring-2 focus:ring-sky-500/20" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
        <span asp-validation-for="Input.NewPassword" class="mt-2 block text-sm text-rose-600 dark:text-rose-300"></span>
    </div>
    <div>
        <label asp-for="Input.ConfirmPassword" class="text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400">Confirm password</label>
        <input asp-for="Input.ConfirmPassword" class="mt-2 w-full rounded-xl border border-slate-300 dark:border-slate-800 bg-white/95 dark:bg-slate-950/60 px-4 py-3 text-sm text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:border-sky-400 focus:outline-none focus:ring-2 focus:ring-sky-500/20" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
        <span asp-validation-for="Input.ConfirmPassword" class="mt-2 block text-sm text-rose-600 dark:text-rose-300"></span>
    </div>
    <button type="submit" class="w-full rounded-full bg-sky-500 px-5 py-3 text-sm font-semibold text-slate-950 transition hover:bg-sky-400">Update password</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




