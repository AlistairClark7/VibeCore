@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-lg font-semibold text-white">@ViewData["Title"]</h3>

<div class="mt-4 rounded-2xl border border-amber-500/30 bg-amber-500/10 p-4 text-sm text-amber-200" role="alert">
    <p>
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>
</div>

<form id="delete-user" method="post" class="mt-6 max-w-xl space-y-5">
    <div asp-validation-summary="ModelOnly" class="rounded-2xl border border-rose-500/30 bg-rose-500/10 p-3 text-sm text-rose-200" role="alert"></div>
    @if (Model.RequirePassword)
    {
        <div>
            <label asp-for="Input.Password" class="text-xs font-semibold uppercase tracking-wider text-slate-400">Password</label>
            <input asp-for="Input.Password" class="mt-2 w-full rounded-xl border border-slate-800 bg-slate-950/60 px-4 py-3 text-sm text-slate-100 placeholder:text-slate-500 focus:border-rose-400 focus:outline-none focus:ring-2 focus:ring-rose-500/20" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
            <span asp-validation-for="Input.Password" class="mt-2 block text-sm text-rose-300"></span>
        </div>
    }
    <button class="w-full rounded-full bg-rose-500/90 px-5 py-3 text-sm font-semibold text-white transition hover:bg-rose-400" type="submit">Delete data and close my account</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
