@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = "Generate two-factor authentication (2FA) recovery codes";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3 class="mt-4 text-lg font-semibold text-slate-900 dark:text-white">@ViewData["Title"]</h3>
<div class="mt-4 rounded-2xl border border-amber-500/30 bg-amber-500/10 p-4 text-sm text-amber-700 dark:text-amber-200" role="alert">
    <p>
        <strong>Put these codes in a safe place.</strong>
    </p>
    <p class="mt-2">
        If you lose your device and don't have the recovery codes you will lose access to your account.
    </p>
    <p class="mt-2">
        Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key
        used in an authenticator app you should <a class="text-sky-600 dark:text-sky-300 transition hover:text-sky-700 dark:hover:text-sky-200" asp-page="./ResetAuthenticator">reset your authenticator keys</a>.
    </p>
</div>
<form method="post" class="mt-4">
    <button class="rounded-full border border-rose-500/40 px-4 py-2 text-xs font-semibold text-rose-700 dark:text-rose-200 transition hover:border-rose-400/60 hover:text-rose-800 dark:hover:text-rose-100" type="submit">Generate Recovery Codes</button>
</form>




