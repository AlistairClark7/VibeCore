@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-lg font-semibold text-white">@ViewData["Title"]</h3>

<div class="mt-4 max-w-xl space-y-4 text-sm text-slate-300">
    <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
    <p class="text-rose-200">
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>
    <form id="download-data" asp-page="DownloadPersonalData" method="post">
        <button class="rounded-full bg-sky-500 px-4 py-2 text-xs font-semibold text-slate-950 transition hover:bg-sky-400" type="submit">Download</button>
    </form>
    <a id="delete" asp-page="DeletePersonalData" class="inline-flex rounded-full border border-rose-500/40 px-4 py-2 text-xs font-semibold text-rose-200 transition hover:border-rose-400/60 hover:text-rose-100">Delete</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
