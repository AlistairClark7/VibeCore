@page
@model ShowRecoveryCodesModel
@{
    ViewData["Title"] = "Recovery codes";
    ViewData["ActivePage"] = "TwoFactorAuthentication";
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3 class="mt-4 text-lg font-semibold text-white">@ViewData["Title"]</h3>
<div class="mt-4 rounded-2xl border border-amber-500/30 bg-amber-500/10 p-4 text-sm text-amber-200" role="alert">
    <p>
        <strong>Put these codes in a safe place.</strong>
    </p>
    <p class="mt-2">
        If you lose your device and don't have the recovery codes you will lose access to your account.
    </p>
</div>
<div class="mt-6 grid gap-3 sm:grid-cols-2">
    @for (var row = 0; row < Model.RecoveryCodes.Length; row += 2)
    {
        <div class="rounded-2xl border border-slate-800/60 bg-slate-950/50 p-4 text-sm text-slate-200">
            <div class="flex flex-wrap gap-3">
                <code class="rounded bg-slate-800/60 px-2 py-1 text-xs">@Model.RecoveryCodes[row]</code>
                <code class="rounded bg-slate-800/60 px-2 py-1 text-xs">@Model.RecoveryCodes[row + 1]</code>
            </div>
        </div>
    }
</div>
