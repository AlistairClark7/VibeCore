@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error")
        ? "border-rose-500/30 bg-rose-500/10 text-rose-200"
        : "border-emerald-500/30 bg-emerald-500/10 text-emerald-200";
    <div class="rounded-2xl border px-4 py-3 text-sm @statusMessageClass" role="status">
        @Model
    </div>
}
